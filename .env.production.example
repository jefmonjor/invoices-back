# =================================================================
# PRODUCTION ENVIRONMENT VARIABLES - INVOICES BACKEND
# =================================================================
# IMPORTANTE: Este archivo debe ser copiado como .env y personalizado
# NUNCA versionar el archivo .env real en Git

# =================================================================
# GENERAL
# =================================================================
SPRING_PROFILES_ACTIVE=prod
LOG_LEVEL_ROOT=WARN
LOG_LEVEL_APP=INFO

# =================================================================
# POSTGRESQL ROOT
# =================================================================
POSTGRES_ROOT_PASSWORD=CHANGE_ME_strong_postgres_root_password_2025

# =================================================================
# POSTGRESQL - USER SERVICE
# =================================================================
USER_DB_USERNAME=user_service_user
USER_DB_PASSWORD=CHANGE_ME_strong_user_db_password_2025

# =================================================================
# POSTGRESQL - INVOICE SERVICE
# =================================================================
INVOICE_DB_USERNAME=invoice_service_user
INVOICE_DB_PASSWORD=CHANGE_ME_strong_invoice_db_password_2025

# =================================================================
# POSTGRESQL - DOCUMENT SERVICE
# =================================================================
DOCUMENT_DB_USERNAME=document_service_user
DOCUMENT_DB_PASSWORD=CHANGE_ME_strong_document_db_password_2025

# =================================================================
# POSTGRESQL - TRACE SERVICE
# =================================================================
TRACE_DB_USERNAME=trace_service_user
TRACE_DB_PASSWORD=CHANGE_ME_strong_trace_db_password_2025

# =================================================================
# JWT CONFIGURATION
# =================================================================
# Generar con: openssl rand -base64 64 | tr -d '\n'
JWT_SECRET=CHANGE_ME_generate_with_openssl_rand_base64_64_minimum_64_chars
JWT_EXPIRATION_MS=3600000
JWT_ISSUER=invoices-backend-production

# =================================================================
# EUREKA SERVER
# =================================================================
EUREKA_USERNAME=eureka-admin
EUREKA_PASSWORD=CHANGE_ME_strong_eureka_password_2025

# =================================================================
# MINIO (S3-COMPATIBLE STORAGE)
# =================================================================
MINIO_ACCESS_KEY=CHANGE_ME_minio_admin_user
MINIO_SECRET_KEY=CHANGE_ME_strong_minio_secret_key_min_32_chars_2025
MINIO_BUCKET_NAME=invoices-pdfs-prod

# =================================================================
# KAFKA
# =================================================================
KAFKA_INVOICE_TOPIC=invoice-events
KAFKA_TRACE_GROUP_ID=trace-group-prod

# =================================================================
# CORS (Frontend URLs permitidas)
# =================================================================
CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://app.yourdomain.com
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_MAX_AGE=3600

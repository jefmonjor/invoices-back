<?xml version="1.0" encoding="UTF-8"?>
<jasperReport xmlns="http://jasperreports.sourceforge.net/jasperreports"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://jasperreports.sourceforge.net/jasperreports
              http://jasperreports.sourceforge.net/xsd/jasperreport.xsd"
              name="invoice-items-subreport" pageWidth="535" pageHeight="842" columnWidth="535">

    <!-- Fields from InvoiceItem -->
    <field name="description" class="java.lang.String"/>
    <field name="units" class="java.lang.Integer"/>
    <field name="discountPercentage" class="java.math.BigDecimal"/>
    <field name="price" class="java.math.BigDecimal"/>
    <field name="vatPercentage" class="java.math.BigDecimal"/>
    <field name="total" class="java.math.BigDecimal"/>

    <!-- Detail Band - Item Row -->
    <detail>
        <band height="25">
            <textField>
                <reportElement x="0" y="0" width="200" height="25"/>
                <box><pen lineWidth="0.5"/></box>
                <textElement textAlignment="Left" verticalAlignment="Middle">
                    <font size="8"/>
                </textElement>
                <textFieldExpression><![CDATA[$F{description}]]></textFieldExpression>
            </textField>
            <textField>
                <reportElement x="200" y="0" width="50" height="25"/>
                <box><pen lineWidth="0.5"/></box>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font size="8"/>
                </textElement>
                <textFieldExpression><![CDATA[$F{units}]]></textFieldExpression>
            </textField>
            <textField pattern="#,##0.00">
                <reportElement x="250" y="0" width="50" height="25"/>
                <box><pen lineWidth="0.5"/></box>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font size="8"/>
                </textElement>
                <textFieldExpression><![CDATA[$F{discountPercentage}]]></textFieldExpression>
            </textField>
            <textField pattern="#,##0.00">
                <reportElement x="300" y="0" width="70" height="25"/>
                <box><pen lineWidth="0.5"/></box>
                <textElement textAlignment="Right" verticalAlignment="Middle">
                    <font size="8"/>
                </textElement>
                <textFieldExpression><![CDATA[$F{price}]]></textFieldExpression>
            </textField>
            <textField pattern="#,##0.00">
                <reportElement x="370" y="0" width="50" height="25"/>
                <box><pen lineWidth="0.5"/></box>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font size="8"/>
                </textElement>
                <textFieldExpression><![CDATA[$F{vatPercentage}]]></textFieldExpression>
            </textField>
            <textField pattern="#,##0.00">
                <reportElement x="420" y="0" width="115" height="25"/>
                <box><pen lineWidth="0.5"/></box>
                <textElement textAlignment="Right" verticalAlignment="Middle">
                    <font size="8"/>
                </textElement>
                <textFieldExpression><![CDATA[$F{total}]]></textFieldExpression>
            </textField>
        </band>
    </detail>
</jasperReport>

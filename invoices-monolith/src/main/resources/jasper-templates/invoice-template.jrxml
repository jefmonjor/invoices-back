<?xml version="1.0" encoding="UTF-8"?>
<jasperReport xmlns="http://jasperreports.sourceforge.net/jasperreports"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://jasperreports.sourceforge.net/jasperreports
              http://jasperreports.sourceforge.net/xsd/jasperreport.xsd"
              name="invoice-template" pageWidth="595" pageHeight="842" columnWidth="535"
              leftMargin="30" rightMargin="30" topMargin="20" bottomMargin="20">

    <!-- Parameters -->
    <parameter name="invoiceNumber" class="java.lang.String"/>
    <parameter name="issueDate" class="java.time.LocalDateTime"/>
    <parameter name="companyName" class="java.lang.String"/>
    <parameter name="companyTaxId" class="java.lang.String"/>
    <parameter name="companyAddress" class="java.lang.String"/>
    <parameter name="companyPhone" class="java.lang.String"/>
    <parameter name="clientName" class="java.lang.String"/>
    <parameter name="clientTaxId" class="java.lang.String"/>
    <parameter name="clientAddress" class="java.lang.String"/>
    <parameter name="baseAmount" class="java.math.BigDecimal"/>
    <parameter name="vatAmount" class="java.math.BigDecimal"/>
    <parameter name="totalAmount" class="java.math.BigDecimal"/>
    <parameter name="iban" class="java.lang.String"/>
    <parameter name="notes" class="java.lang.String"/>
    <parameter name="items" class="net.sf.jasperreports.engine.data.JRBeanCollectionDataSource"/>

    <!-- Title Band - Factura Header -->
    <title>
        <band height="80">
            <staticText>
                <reportElement x="0" y="10" width="535" height="30"/>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font size="20" isBold="true"/>
                </textElement>
                <text><![CDATA[FACTURA]]></text>
            </staticText>
            <textField>
                <reportElement x="400" y="50" width="135" height="20"/>
                <textElement textAlignment="Right">
                    <font size="12" isBold="true"/>
                </textElement>
                <textFieldExpression><![CDATA[$P{invoiceNumber}]]></textFieldExpression>
            </textField>
            <line>
                <reportElement x="0" y="75" width="535" height="1"/>
            </line>
        </band>
    </title>

    <!-- Page Header - Company and Client Info -->
    <pageHeader>
        <band height="180">
            <!-- EMISOR -->
            <staticText>
                <reportElement x="0" y="10" width="250" height="20"/>
                <textElement>
                    <font size="10" isBold="true"/>
                </textElement>
                <text><![CDATA[EMISOR:]]></text>
            </staticText>
            <textField>
                <reportElement x="0" y="30" width="250" height="15"/>
                <textElement><font size="9"/></textElement>
                <textFieldExpression><![CDATA[$P{companyName}]]></textFieldExpression>
            </textField>
            <textField>
                <reportElement x="0" y="45" width="250" height="15"/>
                <textElement><font size="9"/></textElement>
                <textFieldExpression><![CDATA[$P{companyTaxId}]]></textFieldExpression>
            </textField>
            <textField>
                <reportElement x="0" y="60" width="250" height="30"/>
                <textElement><font size="9"/></textElement>
                <textFieldExpression><![CDATA[$P{companyAddress}]]></textFieldExpression>
            </textField>
            <textField>
                <reportElement x="0" y="90" width="250" height="15"/>
                <textElement><font size="9"/></textElement>
                <textFieldExpression><![CDATA[$P{companyPhone}]]></textFieldExpression>
            </textField>

            <!-- CLIENTE -->
            <staticText>
                <reportElement x="285" y="10" width="250" height="20"/>
                <textElement>
                    <font size="10" isBold="true"/>
                </textElement>
                <text><![CDATA[CLIENTE:]]></text>
            </staticText>
            <textField>
                <reportElement x="285" y="30" width="250" height="15"/>
                <textElement><font size="9"/></textElement>
                <textFieldExpression><![CDATA[$P{clientName}]]></textFieldExpression>
            </textField>
            <textField>
                <reportElement x="285" y="45" width="250" height="15"/>
                <textElement><font size="9"/></textElement>
                <textFieldExpression><![CDATA[$P{clientTaxId}]]></textFieldExpression>
            </textField>
            <textField>
                <reportElement x="285" y="60" width="250" height="30"/>
                <textElement><font size="9"/></textElement>
                <textFieldExpression><![CDATA[$P{clientAddress}]]></textFieldExpression>
            </textField>

            <line>
                <reportElement x="0" y="175" width="535" height="1"/>
            </line>
        </band>
    </pageHeader>

    <!-- Column Header - Items Table Header -->
    <columnHeader>
        <band height="30">
            <staticText>
                <reportElement x="0" y="5" width="200" height="20" mode="Opaque" backcolor="#E0E0E0"/>
                <box><pen lineWidth="0.5"/></box>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font size="9" isBold="true"/>
                </textElement>
                <text><![CDATA[DescripciÃ³n]]></text>
            </staticText>
            <staticText>
                <reportElement x="200" y="5" width="50" height="20" mode="Opaque" backcolor="#E0E0E0"/>
                <box><pen lineWidth="0.5"/></box>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font size="9" isBold="true"/>
                </textElement>
                <text><![CDATA[Uds]]></text>
            </staticText>
            <staticText>
                <reportElement x="250" y="5" width="50" height="20" mode="Opaque" backcolor="#E0E0E0"/>
                <box><pen lineWidth="0.5"/></box>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font size="9" isBold="true"/>
                </textElement>
                <text><![CDATA[Dto%]]></text>
            </staticText>
            <staticText>
                <reportElement x="300" y="5" width="70" height="20" mode="Opaque" backcolor="#E0E0E0"/>
                <box><pen lineWidth="0.5"/></box>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font size="9" isBold="true"/>
                </textElement>
                <text><![CDATA[Precio]]></text>
            </staticText>
            <staticText>
                <reportElement x="370" y="5" width="50" height="20" mode="Opaque" backcolor="#E0E0E0"/>
                <box><pen lineWidth="0.5"/></box>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font size="9" isBold="true"/>
                </textElement>
                <text><![CDATA[IVA%]]></text>
            </staticText>
            <staticText>
                <reportElement x="420" y="5" width="115" height="20" mode="Opaque" backcolor="#E0E0E0"/>
                <box><pen lineWidth="0.5"/></box>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font size="9" isBold="true"/>
                </textElement>
                <text><![CDATA[Importe]]></text>
            </staticText>
        </band>
    </columnHeader>

    <!-- Detail Band - Items Data -->
    <detail>
        <band height="30">
            <subreport>
                <reportElement x="0" y="0" width="535" height="30"/>
                <dataSourceExpression><![CDATA[$P{items}]]></dataSourceExpression>
                <subreportExpression><![CDATA["invoice-items-subreport.jasper"]]></subreportExpression>
            </subreport>
        </band>
    </detail>

    <!-- Summary Band - Totals and Footer -->
    <summary>
        <band height="200">
            <line>
                <reportElement x="0" y="10" width="535" height="1"/>
            </line>

            <!-- Totales -->
            <staticText>
                <reportElement x="300" y="30" width="120" height="20"/>
                <textElement textAlignment="Right">
                    <font size="10" isBold="true"/>
                </textElement>
                <text><![CDATA[Base imponible:]]></text>
            </staticText>
            <textField pattern="#,##0.00">
                <reportElement x="425" y="30" width="110" height="20"/>
                <textElement textAlignment="Right">
                    <font size="10"/>
                </textElement>
                <textFieldExpression><![CDATA[$P{baseAmount}]]></textFieldExpression>
            </textField>

            <staticText>
                <reportElement x="300" y="55" width="120" height="20"/>
                <textElement textAlignment="Right">
                    <font size="10" isBold="true"/>
                </textElement>
                <text><![CDATA[IVA:]]></text>
            </staticText>
            <textField pattern="#,##0.00">
                <reportElement x="425" y="55" width="110" height="20"/>
                <textElement textAlignment="Right">
                    <font size="10"/>
                </textElement>
                <textFieldExpression><![CDATA[$P{vatAmount}]]></textFieldExpression>
            </textField>

            <line>
                <reportElement x="300" y="80" width="235" height="1"/>
            </line>

            <staticText>
                <reportElement x="300" y="85" width="120" height="25"/>
                <textElement textAlignment="Right">
                    <font size="12" isBold="true"/>
                </textElement>
                <text><![CDATA[TOTAL (Euros):]]></text>
            </staticText>
            <textField pattern="#,##0.00">
                <reportElement x="425" y="85" width="110" height="25"/>
                <textElement textAlignment="Right">
                    <font size="12" isBold="true"/>
                </textElement>
                <textFieldExpression><![CDATA[$P{totalAmount}]]></textFieldExpression>
            </textField>

            <!-- Observaciones e IBAN -->
            <staticText>
                <reportElement x="0" y="130" width="100" height="20"/>
                <textElement>
                    <font size="10" isBold="true"/>
                </textElement>
                <text><![CDATA[Observaciones:]]></text>
            </staticText>
            <textField isBlankWhenNull="true">
                <reportElement x="0" y="150" width="300" height="30"/>
                <textElement><font size="9"/></textElement>
                <textFieldExpression><![CDATA[$P{notes}]]></textFieldExpression>
            </textField>

            <staticText>
                <reportElement x="310" y="130" width="50" height="20"/>
                <textElement>
                    <font size="10" isBold="true"/>
                </textElement>
                <text><![CDATA[IBAN:]]></text>
            </staticText>
            <textField isBlankWhenNull="true">
                <reportElement x="360" y="130" width="175" height="20"/>
                <textElement><font size="9"/></textElement>
                <textFieldExpression><![CDATA[$P{iban}]]></textFieldExpression>
            </textField>
        </band>
    </summary>
</jasperReport>

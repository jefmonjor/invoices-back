#############################################
# Variables de Entorno - Ejemplo
# Copiar a .env y modificar según necesidad
#############################################

# ============================================
# Config Server (Puerto 8888)
# ============================================
CONFIG_PROFILE=native
CONFIG_GIT_URI=https://github.com/jefmonjor/invoices-back-config.git
CONFIG_GIT_BRANCH=main
CONFIG_NATIVE_PATH=classpath:/config
LOG_LEVEL_ROOT=INFO
LOG_LEVEL_CONFIG=DEBUG

# Opcional: Basic Auth
# CONFIG_SERVER_USERNAME=config-admin
# CONFIG_SERVER_PASSWORD=change-me

# ============================================
# Trace Service (Puerto 8084) - CRÍTICO
# ============================================
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_TRACE_GROUP_ID=trace-group
KAFKA_INVOICE_TOPIC=invoice-events
KAFKA_INVOICE_DLQ_TOPIC=invoice-events-dlq

# Base de datos
TRACE_DB_HOST=localhost
TRACE_DB_PORT=5432
TRACE_DB_NAME=tracedb
TRACE_DB_USERNAME=trace_service_user
TRACE_DB_PASSWORD=password

# ============================================
# Document Service (Puerto 8083)
# ============================================
MINIO_ENDPOINT=http://localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET_NAME=invoices
MINIO_REGION=us-east-1

# Base de datos
DOCUMENT_DB_HOST=localhost
DOCUMENT_DB_PORT=5432
DOCUMENT_DB_NAME=documentdb
DOCUMENT_DB_USERNAME=document_service_user
DOCUMENT_DB_PASSWORD=password

# ============================================
# Gateway Service (Puerto 8080)
# ============================================
JWT_SECRET=default-secret-key-change-in-production-min-32-chars
JWT_ISSUER=invoices-backend

# ============================================
# Eureka Server (Puerto 8761)
# ============================================
EUREKA_SERVER_HOST=localhost
EUREKA_SERVER_PORT=8761
EUREKA_USERNAME=eureka-admin
EUREKA_PASSWORD=password

# ============================================
# Logging Global
# ============================================
LOG_LEVEL_ROOT=INFO
LOG_LEVEL_APP=DEBUG

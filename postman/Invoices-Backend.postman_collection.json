{
  "info": {
    "name": "Invoices Backend API",
    "description": "Colección completa de endpoints para el sistema de gestión de facturas",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "version": "1.0.0"
  },
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{token}}",
        "type": "string"
      }
    ]
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:8080",
      "type": "string"
    },
    {
      "key": "token",
      "value": "",
      "type": "string"
    },
    {
      "key": "userId",
      "value": "1",
      "type": "string"
    },
    {
      "key": "invoiceId",
      "value": "1",
      "type": "string"
    },
    {
      "key": "documentId",
      "value": "1",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Register User",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    const response = pm.response.json();",
                  "    pm.environment.set('token', response.token);",
                  "    pm.environment.set('userId', response.user.id);",
                  "    console.log('Token saved:', response.token);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "auth": {
              "type": "noauth"
            },
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"test@example.com\",\n  \"password\": \"password123\",\n  \"firstName\": \"Test\",\n  \"lastName\": \"User\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/auth/register",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "register"]
            },
            "description": "Registrar un nuevo usuario en el sistema"
          },
          "response": []
        },
        {
          "name": "Login",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    pm.environment.set('token', response.token);",
                  "    pm.environment.set('userId', response.user.id);",
                  "    console.log('Token saved:', response.token);",
                  "    console.log('User ID:', response.user.id);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "auth": {
              "type": "noauth"
            },
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"admin@invoices.com\",\n  \"password\": \"admin123\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/auth/login",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "login"]
            },
            "description": "Login con credenciales. Usuario admin por defecto: admin@invoices.com / admin123"
          },
          "response": []
        }
      ],
      "description": "Endpoints de autenticación (públicos)"
    },
    {
      "name": "Users",
      "item": [
        {
          "name": "Get All Users (Admin)",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/users",
              "host": ["{{baseUrl}}"],
              "path": ["api", "users"]
            },
            "description": "Obtener lista de todos los usuarios. Solo ADMIN."
          },
          "response": []
        },
        {
          "name": "Get User By ID",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/users/{{userId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "users", "{{userId}}"]
            },
            "description": "Obtener usuario por ID. Solo ADMIN o el mismo usuario."
          },
          "response": []
        },
        {
          "name": "Create User (Admin)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"newuser@example.com\",\n  \"password\": \"password123\",\n  \"firstName\": \"New\",\n  \"lastName\": \"User\",\n  \"roles\": [\"ROLE_USER\"]\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/users",
              "host": ["{{baseUrl}}"],
              "path": ["api", "users"]
            },
            "description": "Crear nuevo usuario. Solo ADMIN."
          },
          "response": []
        },
        {
          "name": "Update User",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"firstName\": \"Updated\",\n  \"lastName\": \"Name\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/users/{{userId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "users", "{{userId}}"]
            },
            "description": "Actualizar usuario. Solo ADMIN o el mismo usuario."
          },
          "response": []
        },
        {
          "name": "Delete User (Admin)",
          "request": {
            "method": "DELETE",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/users/{{userId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "users", "{{userId}}"]
            },
            "description": "Eliminar usuario (soft delete). Solo ADMIN."
          },
          "response": []
        }
      ],
      "description": "Gestión de usuarios"
    },
    {
      "name": "Invoices",
      "item": [
        {
          "name": "Create Invoice",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    const response = pm.response.json();",
                  "    pm.environment.set('invoiceId', response.id);",
                  "    console.log('Invoice ID saved:', response.id);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"clientId\": 1,\n  \"clientEmail\": \"admin@invoices.com\",\n  \"invoiceDate\": \"2025-11-13\",\n  \"dueDate\": \"2025-12-13\",\n  \"notes\": \"Factura de servicios de consultoría\",\n  \"items\": [\n    {\n      \"description\": \"Consultoría de Software\",\n      \"quantity\": 10,\n      \"unitPrice\": 100.00\n    },\n    {\n      \"description\": \"Desarrollo Backend\",\n      \"quantity\": 5,\n      \"unitPrice\": 150.00\n    }\n  ]\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/invoices",
              "host": ["{{baseUrl}}"],
              "path": ["api", "invoices"]
            },
            "description": "Crear nueva factura con ítems. Calcula automáticamente subtotal, tax (19%) y total."
          },
          "response": []
        },
        {
          "name": "Get All Invoices (Admin)",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/invoices",
              "host": ["{{baseUrl}}"],
              "path": ["api", "invoices"]
            },
            "description": "Obtener todas las facturas. Solo ADMIN."
          },
          "response": []
        },
        {
          "name": "Get Invoice By ID",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/invoices/{{invoiceId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "invoices", "{{invoiceId}}"]
            },
            "description": "Obtener factura por ID. Solo ADMIN o el dueño de la factura."
          },
          "response": []
        },
        {
          "name": "Get Invoices By Client ID",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/invoices?clientId=1",
              "host": ["{{baseUrl}}"],
              "path": ["api", "invoices"],
              "query": [
                {
                  "key": "clientId",
                  "value": "1"
                }
              ]
            },
            "description": "Filtrar facturas por cliente"
          },
          "response": []
        },
        {
          "name": "Update Invoice",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"dueDate\": \"2025-12-31\",\n  \"status\": \"PAID\",\n  \"notes\": \"Factura actualizada\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/invoices/{{invoiceId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "invoices", "{{invoiceId}}"]
            },
            "description": "Actualizar factura. Solo ADMIN o dueño."
          },
          "response": []
        },
        {
          "name": "Mark Invoice As Paid",
          "request": {
            "method": "POST",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/invoices/{{invoiceId}}/pay",
              "host": ["{{baseUrl}}"],
              "path": ["api", "invoices", "{{invoiceId}}", "pay"]
            },
            "description": "Marcar factura como pagada. Envía evento a Kafka."
          },
          "response": []
        },
        {
          "name": "Delete Invoice (Admin)",
          "request": {
            "method": "DELETE",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/invoices/{{invoiceId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "invoices", "{{invoiceId}}"]
            },
            "description": "Eliminar factura. Solo ADMIN."
          },
          "response": []
        },
        {
          "name": "Generate PDF",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    pm.environment.set('documentId', response.documentId);",
                  "    console.log('Document ID saved:', response.documentId);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"invoiceId\": {{invoiceId}}\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/invoices/generate-pdf",
              "host": ["{{baseUrl}}"],
              "path": ["api", "invoices", "generate-pdf"]
            },
            "description": "Generar PDF de la factura con JasperReports y subirlo a MinIO."
          },
          "response": []
        }
      ],
      "description": "Gestión de facturas"
    },
    {
      "name": "Documents",
      "item": [
        {
          "name": "Upload Document",
          "request": {
            "method": "POST",
            "header": [],
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "file",
                  "type": "file",
                  "src": []
                },
                {
                  "key": "invoiceId",
                  "value": "1",
                  "type": "text"
                }
              ]
            },
            "url": {
              "raw": "{{baseUrl}}/api/documents",
              "host": ["{{baseUrl}}"],
              "path": ["api", "documents"]
            },
            "description": "Subir documento PDF a MinIO. Max 10MB."
          },
          "response": []
        },
        {
          "name": "Get Document By ID",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/documents/{{documentId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "documents", "{{documentId}}"]
            },
            "description": "Obtener metadata del documento"
          },
          "response": []
        },
        {
          "name": "Download Document",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/documents/{{documentId}}/download",
              "host": ["{{baseUrl}}"],
              "path": ["api", "documents", "{{documentId}}", "download"]
            },
            "description": "Descargar PDF desde MinIO"
          },
          "response": []
        },
        {
          "name": "Get Documents By Invoice ID",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/documents?invoiceId={{invoiceId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "documents"],
              "query": [
                {
                  "key": "invoiceId",
                  "value": "{{invoiceId}}"
                }
              ]
            },
            "description": "Obtener todos los documentos de una factura"
          },
          "response": []
        },
        {
          "name": "Delete Document",
          "request": {
            "method": "DELETE",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/documents/{{documentId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "documents", "{{documentId}}"]
            },
            "description": "Eliminar documento de MinIO y BD"
          },
          "response": []
        }
      ],
      "description": "Gestión de documentos (almacenamiento en MinIO)"
    },
    {
      "name": "Traces (Audit)",
      "item": [
        {
          "name": "Get Traces By Invoice ID",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/traces?invoiceId={{invoiceId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "traces"],
              "query": [
                {
                  "key": "invoiceId",
                  "value": "{{invoiceId}}"
                }
              ]
            },
            "description": "Obtener logs de auditoría de una factura específica"
          },
          "response": []
        },
        {
          "name": "Get Traces By Client ID",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/traces?clientId=1",
              "host": ["{{baseUrl}}"],
              "path": ["api", "traces"],
              "query": [
                {
                  "key": "clientId",
                  "value": "1"
                }
              ]
            },
            "description": "Obtener logs de auditoría de un cliente"
          },
          "response": []
        },
        {
          "name": "Get Traces By Event Type",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/traces?eventType=INVOICE_CREATED",
              "host": ["{{baseUrl}}"],
              "path": ["api", "traces"],
              "query": [
                {
                  "key": "eventType",
                  "value": "INVOICE_CREATED"
                }
              ]
            },
            "description": "Filtrar logs por tipo de evento (INVOICE_CREATED, INVOICE_PAID, etc.)"
          },
          "response": []
        },
        {
          "name": "Get All Traces (Paginated)",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/traces?page=0&size=20",
              "host": ["{{baseUrl}}"],
              "path": ["api", "traces"],
              "query": [
                {
                  "key": "page",
                  "value": "0"
                },
                {
                  "key": "size",
                  "value": "20"
                }
              ]
            },
            "description": "Obtener todos los logs de auditoría (paginado)"
          },
          "response": []
        }
      ],
      "description": "Auditoría de eventos (consumidos desde Kafka)"
    },
    {
      "name": "Health Checks",
      "item": [
        {
          "name": "Gateway Health",
          "request": {
            "auth": {
              "type": "noauth"
            },
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/actuator/health",
              "host": ["{{baseUrl}}"],
              "path": ["actuator", "health"]
            }
          },
          "response": []
        },
        {
          "name": "User Service Health",
          "request": {
            "auth": {
              "type": "noauth"
            },
            "method": "GET",
            "header": [],
            "url": {
              "raw": "http://localhost:8082/actuator/health",
              "protocol": "http",
              "host": ["localhost"],
              "port": "8082",
              "path": ["actuator", "health"]
            }
          },
          "response": []
        },
        {
          "name": "Invoice Service Health",
          "request": {
            "auth": {
              "type": "noauth"
            },
            "method": "GET",
            "header": [],
            "url": {
              "raw": "http://localhost:8081/actuator/health",
              "protocol": "http",
              "host": ["localhost"],
              "port": "8081",
              "path": ["actuator", "health"]
            }
          },
          "response": []
        },
        {
          "name": "Eureka Dashboard",
          "request": {
            "auth": {
              "type": "noauth"
            },
            "method": "GET",
            "header": [],
            "url": {
              "raw": "http://localhost:8761",
              "protocol": "http",
              "host": ["localhost"],
              "port": "8761"
            }
          },
          "response": []
        }
      ],
      "description": "Health checks y monitoreo"
    }
  ]
}
